rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read/write FCM tokens
    // (Users are signed in anonymously, so we can't verify email ownership)
    match /fcmTokens/{emailOrUid} {
      allow read, write: if request.auth != null;
      // Cloud Functions (admin SDK) bypass these rules automatically
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
